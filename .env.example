# ===========================================
# DESA DIGITAL - PRODUCTION ENVIRONMENT
# ===========================================
# Salin file ini ke .env dan sesuaikan nilainya:
#   cp .env.example .env
#   nano .env

# ── Database ──
POSTGRES_USER=postgres
POSTGRES_PASSWORD=GantiDenganPasswordKuat123!
POSTGRES_DB=desa_digital

# ── Security (WAJIB diganti!) ──
# Generate dengan: openssl rand -hex 32
JWT_SECRET=ganti_dengan_openssl_rand_hex_32
JWT_REFRESH_SECRET=ganti_dengan_openssl_rand_hex_32
ENCRYPTION_KEY=ganti_dengan_openssl_rand_hex_32

# ── Domain & CORS ──
# Tanpa domain: http://IP_SERVER
# Dengan domain: https://cctv.desaanda.com
CORS_ORIGIN=http://localhost

# ── Akun Superadmin (dibuat otomatis saat pertama kali jalan) ──
ADMIN_USERNAME=superadmin
ADMIN_PASSWORD=Admin123!
ADMIN_NAME=Super Admin

# ── Data Demo (true = contoh desa/RT/kamera, false = kosong) ──
SEED_DEMO_DATA=false

# ── Docker Hub ──
DOCKERHUB_USERNAME=faqihuddinhabibi

# ── Telegram (opsional, bisa diisi dari menu Pengaturan di UI) ──
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ── Cloudflare Tunnel (opsional) ──
CLOUDFLARE_TUNNEL_TOKEN=
